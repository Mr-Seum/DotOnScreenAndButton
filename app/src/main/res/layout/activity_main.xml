        android:background="@drawable/button"
        android:text="4"
        android:visibility="invisible"
        app:backgroundTint="@color/purple_200" />
    <Button
        android:id="@+id/button5"
        android:layout_width="114dp"
        android:layout_height="120dp"
        android:background="@drawable/button"
        android:text="5"
        android:visibility="invisible"
        app:backgroundTint="@color/purple_200" />
    <Button
        android:id="@+id/button6"
        android:layout_width="114dp"
        android:layout_height="120dp"
        android:background="@drawable/button"
